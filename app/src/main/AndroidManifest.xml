<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xwj.customview">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.internet"></uses-permission>




    <application
        android:name=".Component.DreamCustomViewApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.VerticalActivity"></activity>

        <activity android:name=".activities.HorizontalActivity"></activity>
        <activity android:name=".activities.GridlayoutActivity"></activity>
        <activity android:name=".activities.StaggeredGridLayoutActivity"></activity>
        <activity android:name=".activities.CardViewActivity"></activity>
        <activity android:name=".activities.ListViewItemActivity"></activity>

    </application>

</manifest>

