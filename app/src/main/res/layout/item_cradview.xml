        <TextView
            android:id="@+id/tv_cardview_remind"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:text="cardview_contentssuiyueasdasdajdfkajsdafafafafafafafafafaf"
